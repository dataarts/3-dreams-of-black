		<!-- Experience Code -->
	
		<script type="text/javascript">

			var Experience = function()
			{
				var webGL;
				var scene;
				var mesh, mesh2;
				var camera;
				var rotationMatrix;
				var time = 0;
				
				//--- Init ---
				
				var Init = function()
				{
					webGL = new THREE.RendererWebGL( "canvas" );
					
					var cube     = new THREE.Cube( 100, 100, 100, 1, 1 );
					var material = new THREE.MeshShaderMaterial( { vertex_shader: "textureVertex", fragment_shader: "textureFragment" } );
					
					scene  = new THREE.Scene();
					mesh   = new THREE.Mesh( cube, material );
					mesh2  = new THREE.Mesh( cube, material );
					camera = new THREE.Camera();

					mesh.position.z = -500;
					mesh2.position.z = -50;
					mesh2.position.y = 150;
	
					mesh.addChild( mesh2 );
					scene.addChild( mesh );
					scene.addChild( camera );

					// start rendering

					rotationMatrix = new THREE.Matrix4();

				    setInterval( Update, 33 );
					
				}
				
				
				//--- Update ---
				
				var Update = function()
				{
					rotationMatrix.setRotationY( time );
					time += 0.5;
					
//					mesh.localMatrix.multiplySelf( rotationMatrix );
					mesh.position.x = -time;
					mesh.position.z = -500 - time;
					mesh.isDirty = true;
					webGL.render( scene, camera );
				}
				
				
				//--- public ---
				
				return {
					
					Init: Init
				}
			}();
		
		</script>
	</head>
	<body onload="Experience.Init();">
  		<canvas id="canvas" style="border: none;" width="500" height="500"></canvas>
	</body>
